@model IEnumerable<_190410_BlogV1.Models.Makaleler>

@{
    ViewBag.Title = "MakaleIndex";
    Layout = "~/Areas/AdminPaneli/Views/Shared/AdminLaoutPage.cshtml";
}

<div class="content-wrapper">

    <!-- left column -->
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Create New", "CreateIndex")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.icerik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EklenmeTarihi)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.GoruntulenmeSayisi)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.GuncellenmeTarihi)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.BegenmeSayisi)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Aktifmi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YazarID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KategoriID)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.icerik)*@
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target=".bs-example-modal-sm">Detay</button>

                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel"> 
                                        @Html.DisplayFor(modelItem => item.Baslik)  
                                        </h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span></button>


                                    </div>
                                    <div class="modal-body">
                                        @Html.DisplayFor(modelItem => item.icerik)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                    <td>
                       @Html.DisplayFor(modelItem => item.EklenmeTarihi)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.GoruntulenmeSayisi)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.GuncellenmeTarihi)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.BegenmeSayisi)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Aktifmi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YazarID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KategoriID)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateIndex", new { MakalelerID = item.MakalelerID, KategoriID = item.KategoriID }) |
                        @Html.ActionLink("Details", "Details", new { MakalelerID = item.MakalelerID }) |
                        @Html.ActionLink("Delete", "MakaleSil", new { MakalelerID = item.MakalelerID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
